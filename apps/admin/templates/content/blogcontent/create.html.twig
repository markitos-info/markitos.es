{% include '/shared/start.html.twig' %}

<div class="section-wrapper mg-t-20">
    <label class="section-title">Alta de nuevo post</label>
    <p class="mg-b-20 mg-sm-b-40">Creacion de un blog post nuevo</p>

    <form action="{{ path('content_blogcontent_create',{faq_id:faq_id}) }}" method="post" enctype="multipart/form-data">
        <input type="hidden" name="do_submit" value="do_submit"/>
        <div class="form-layout form-layout-6">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Imagen:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="file" accept="image/png, image/gif, image/jpeg" name="imagen" placeholder="Seleccione imagen del contenido">
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Html Contenido:
                </div>
                <div class="col-7 col-sm-8">
                    <textarea class="form-control" id="html" name="html" placeholder="Html del contenido"></textarea>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Youtube:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" name="youtube" id="youtube" placeholder="youtube del contenido"></input>
            </div>
        </div>
        <div class="form-layout-footer bd bd-gray-800 pd-20 bd-t-0">
            <button type="submit" class="btn btn-primary bd-0">
                <i class="fa fa-plus mg-r-5"></i>
                Nuevo Post</button>
        </div>
    </div>
</form>
<p class="section-label mg-t-40">Ayuda</p>
<table class="table table-reference">
    <thead>
        <tr>
            <th class="wd-40p">Campo</th>
            <th class="wd-60p">Description</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <code class="pd-0 bg-transparent">Html Contenido</code>
            </td>
            <td>
                Parrafos P con algun strong y vamos viendo como lo sofisticamos
            </td>
        </tr>
        <tr>
            <td>
                <code class="pd-0 bg-transparent">Imagen</code>
            </td>
            <td>
                Imagen que encabezara el bloque de contenido
            </td>
        </tr>
        <tr>
            <td>
                <code class="pd-0 bg-transparent">Youtube</code>
            </td>
            <td>
                Youtube del contenido
            </td>
        </tr>
    </tbody>
</table></div><div class="section-wrapper mg-t-20">
<label class="section-title">Que podemos hacer?</label>
<div class="row">
    <div class="col-sm-6 col-md-3">
        <div class="btn-demo">
            <a href="{{ path('content_blogcontent_index',{faq_id:faq_id}) }}" class="btn btn-secondary btn-block mg-b-10">
                <i class="fa fa-fast-backward mg-r-5"></i>
                Volver al listado</a>
        </div>
    </div>
</div></div>{% include '/shared/end.html.twig' %}
