{% include '/shared/start.html.twig' %}

<div class="section-wrapper">
    <label class="section-title">Alta de nuevo faq</label>
    <p class="mg-b-20 mg-sm-b-40">Creacion de un faq nuevo</p>

    <form action="{{ path('content_faq_create') }}" method="post">
        <input type="hidden" name="do_submit" value="do_submit"/>
        <div class="form-layout form-layout-6">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Titulo:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" name="title" placeholder="titulo del faq" required>
                </div>
            </div>

            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tags:
                </div>
                <div class="col-7 col-sm-8">
                    <div class="bootstrap-tagsinput">
                        <input type="text" placeholder="tags"></div><input type="text" name="tags" value="" data-role="tagsinput" style="display: none;">
                </div>
            </div>

            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Solucion:
                </div>
                <div class="col-7 col-sm-8">
                    <textarea style="resize: none; width: 100%; height: 250px;" class="form-control" name="solution" placeholder="recomendado markdown o plain text" required></textarea>
                </div>
            </div>
            <div class="form-layout-footer bd bd-gray-800 pd-20 bd-t-0">
                <button type="submit" class="btn btn-primary bd-0">
                    <i class="fa fa-plus mg-r-5"></i>
                    Nuevo Faq</button>
            </div>
        </div>
    </form>
    <label class="section-title">opciones</label>
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="btn-demo">
                <a href="{{ path('content_faq_index') }}" class="btn btn-secondary btn-block mg-b-10">
                    <i class="fa fa-fast-backward mg-r-5"></i>
                    Volver al listado</a>
            </div>
        </div>
    </div>
</div>

{% include '/shared/end.html.twig' %}
