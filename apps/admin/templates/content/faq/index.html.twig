{% include '/shared/start.html.twig' %}


<div class="section-wrapper">
    <label class="section-title">Listado de faqs</label>
    <div class="row">
        <div class="col-lg-12 mg-t-20 mg-lg-t-0">
            <div class="list-group list-group-striped list-group-user">
                <div id="accordion" class="accordion-one" role="tablist" aria-multiselectable="true">
                    {% for faq in faqs %}

                        <div class="card">
                            <div class="card-header" role="tab" id="{{ faq.id }}">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ faq.id }}" aria-expanded="false" aria-controls="collapse{{ faq.id }}" class="tx-gray-800 transition collapsed">
                                    {{ faq.title }}
                                </a>
                            </div>
                            <div id="collapse{{ faq.id }}" class="collapse" role="tabpanel" aria-labelledby="{{ faq.id }}" style="">
                                <div class="card-body">
                                    {% apply markdown_to_html %}
                                    {{ faq.solution }}
                                    {% endapply %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>


<div class="section-wrapper mg-t-20">
    <label class="section-title">Que podemos hacer?</label>
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="btn-demo">
                <a href="{{ path('content_faq_create') }}" class="btn btn-primary btn-block mg-b-10">
                    <i class="fa fa-plus mg-r-5"></i>
                    Nuevo faq</a>
            </div>
        </div>
    </div>
</div>


{% include '/shared/end.html.twig' %}
