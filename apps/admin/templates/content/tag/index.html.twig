{% include '/shared/start.html.twig' %}


<div class="section-wrapper mg-t-20">
    <label class="section-title">Listado de categorías</label>
    <div class="row">
        <div class="col-lg-12 mg-t-20 mg-lg-t-0">
            <div class="list-group list-group-striped list-group-user">

                {% for tag in tags %}
                <div class="list-group-item">
                    <div class="user-name-address">
                        <p>{{ tag.name }}</p>
                        <span>{{ tag.id }}</span>
                    </div>
                    <img class="media-img" src="{{ tag.image }}" alt="Image">
                    <div class="user-btn-wrapper">
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>
</div>


<div class="section-wrapper mg-t-20">
    <label class="section-title">Que podemos hacer?</label>
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="btn-demo">
                <a href="{{ path('content_tag_create') }}" class="btn btn-primary btn-block mg-b-10"><i class="fa fa-plus mg-r-5"></i> Nueva Categoría</a>
            </div>
        </div>
    </div>
</div>


{% include '/shared/end.html.twig' %}
