{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "src",
        "strict": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "outDir": "./dist"
    },
    "rules": {
        "import/first": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"]
    },
    "include": ["src/"],
    "exclude": ["node_modules"]
}
